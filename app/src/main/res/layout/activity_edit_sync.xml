<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Extra.EditSyncActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/aes_address"
                android:padding="5dp"
                android:text="Address"
                android:gravity="center"
                android:textSize="19dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_margin="5dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Sync This Folder"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <Switch
                        android:id="@+id/aes_sync"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="5dp"
                        android:text="Sync on"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <androidx.cardview.widget.CardView
                        android:layout_margin="2dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:id="@+id/rb_monday"
                                    android:layout_margin="5dp"
                                    android:text="Monday"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <RadioButton
                                    android:id="@+id/rb_tuesday"
                                    android:layout_margin="5dp"
                                    android:text="Tuesday"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <RadioButton
                                    android:id="@+id/rb_wednesday"
                                    android:layout_margin="5dp"
                                    android:text="Wednesday"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <RadioButton
                                    android:id="@+id/rb_thursday"
                                    android:layout_margin="5dp"
                                    android:text="Thursday"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:id="@+id/rb_friday"
                                    android:layout_margin="5dp"
                                    android:text="Friday"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <RadioButton
                                    android:id="@+id/rb_saturday"
                                    android:layout_margin="5dp"
                                    android:checked="true"
                                    android:text="Saturday"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <RadioButton
                                    android:id="@+id/rb_sunday"
                                    android:layout_margin="5dp"
                                    android:text="Sunday"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/aes_reset"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:background="#FBFBF8"
                                    android:gravity="center|left"
                                    android:padding="5dp"
                                    android:paddingLeft="20dp"
                                    android:text="  Reset"
                                    android:textColor="@color/colorPrimary" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TimePicker
                android:headerBackground="@color/colorPrimary"
                android:layout_margin="5dp"
                android:id="@+id/aes_time_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TimePicker>
            <Button
                android:id="@+id/aes_submit"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:text="Submit"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>